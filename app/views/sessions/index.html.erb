<div data-controller="counter" class="min-h-screen bg-gray-50 flex flex-col items-center py-10">
  <% if user_signed_in? %>
    <%= button_to "Logout", destroy_user_session_path, 
      method: :delete, 
      class: "bg-gray-800 hover:bg-gray-700 text-white font-medium py-3 px-6 rounded-lg shadow transition-transform duration-200 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
  <% else %>
    <%= link_to "Login", new_user_session_path, 
      class: "bg-blue-600 hover:bg-blue-500 text-white font-medium py-3 px-6 rounded-lg shadow transition-transform duration-200 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  <% end %>

<%= button_to 'Create an account to track your progress!', new_user_registration_path, method: :get, class: 'text-white bg-purple-600 hover:bg-purple-500 font-normal rounded-md px-6 py-3 mb-4', form_class: 'inline' %>
<h2 class="text-5xl font-bold text-gray-800 mb-8 text-center pt-6">Work Day</h2>
  <%= form_with(model: @session, class: "w-full max-w-4xl bg-white rounded-xl shadow-md p-8") do |f| %>
    <div class="flex flex-col items-center mb-8">
      <h3 class="text-lg font-semibold text-gray-700 mb-2">Enter your hourly rate:</h3>
      <%= f.text_field :salary,
             placeholder: "  $00.00",
             data: { action: "input->counter#profit input->counter#limitInputLength", counter_target: "salary" },
             class: "bg-gray-100 border border-gray-300 text-2xl text-gray-700 rounded-md focus:ring-emerald-500 focus:border-emerald-500 text-center p-3 w-2/3 max-w-sm" %>
    </div>

    <div class="grid grid-cols-3 gap-6 items-center">
      <%= f.text_field :profit,
           data: { counter_target: "earn" },
           value: "$00.00",
           readonly: true,
           class: "bg-white border border-gray-300 text-center text-3xl text-gray-700 rounded-lg shadow-md p-6 w-full" %>

      <div class="bg-white border border-gray-200 rounded-lg shadow-md p-6 text-center">
        <button data-action="counter#toggleStartStop counter#avoidSaving"
                data-counter-target="startStop"
                type="button"
                class="text-white bg-red-600 hover:bg-red-500 font-medium rounded-md px-6 py-3 mb-4">
          Start
        </button>
       <%# empty spaces for styling purposes below %>
        <%= f.text_field :time, value: "  00:00:00",
           readonly: true,
           data: { counter_target: "stopwatch" },
           class: "bg-gray-100 border border-gray-300 text-4xl text-gray-800 rounded-lg block w-full p-4 shadow-md" %>
      </div>
      <%= f.text_field :hours,
           value: "Hours completed",
           data: { counter_target: "hours" },
           readonly: true,
           class: "bg-white border border-gray-300 text-center text-2xl text-gray-700 rounded-lg shadow-md p-6 w-full" %>
    </div>
    <div class="flex justify-center mt-8">
      <%= f.submit "Save session",
           data: { counter_target: "save" },
           class: "bg-emerald-500 hover:bg-emerald-400 text-white font-semibold py-3 px-6 rounded-full shadow-md" %>
    </div>
  <% end %>
</div>
