<title>Invoice</title>
<style>
body {
    font-family: Arial, sans-serif;
    background-color: #f3f4f6;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
}

.container {
    width: 100%;
    max-width: 900px;
    background: white;
    padding: 30px;
    box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
    border-radius: 10px;
}

/* Header */
.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 3px solid #e5e7eb;
    padding-bottom: 15px;
    margin-bottom: 25px;
}

.header h1 {
    font-size: 36px;
    font-weight: bold;
    color: #1f2937;
}

.project-name {
    font-size: 20px;
    font-weight: bold;
    color: #374151;
}

/* Customer Details & Invoice Meta */
.customer-details, .invoice-meta {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 15px;
    font-size: 16px;
}

.customer-details div, .invoice-meta div {
    flex: 1;
}

.customer-details div:first-child,
.invoice-meta div:first-child {
    text-align: left;
}

.customer-details div:last-child,
.invoice-meta div:last-child {
    text-align: right;
}

.label {
    font-weight: bold;
    color: #374151;
}

/* Table */
.table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    font-size: 16px;
}

.table th, .table td {
    border: 2px solid #d1d5db;
    padding: 10px;
    text-align: left;
}

.table th {
    background-color: #e5e7eb;
    font-size: 18px;
}

/* Total Section */
.total {
    text-align: right;
    font-size: 22px;
    font-weight: bold;
    padding: 15px;
    margin-top: 30px;
    background-color: #f9fafb;
    border-radius: 8px;
}

/* Footer */
.footer {
    text-align: center;
    margin-top: 20px;
}

.button {
    display: inline-block;
    padding: 2px 10px;
    font-size: 13px;
    background-color: #16a34a;
    color: white;
    margin: 10px;
    text-decoration: none;
    border-radius: 6px;
    font-weight: bold;
    text-align: center;
}

.button:hover {
    background-color: #15803d;
}
</style>


</head>
<body>
    <div class="container">
        <div class="header">
            <h1>INVOICE</h1>
            <div><%= @project.name %></div>
        </div>
        <div class="customer-details">
            <div>
                <span class="label">From:</span>
                <p><%= @invoice.name %></p>
            </div>
            <div>
                <span class="label">Bill To:</span>
                <p><%= @invoice.client %></p>
            </div>
        </div>
        <div class="invoice-meta">
            <div>
                <span class="label">Date:</span>
                <p><%= @invoice.date.strftime("%B %d, %Y") %></p>
            </div>
            <div>
                <span class="label">Due Date:</span>
                <p><%= @invoice.due_date.strftime("%B %d, %Y") %></p>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Quantity / Hours</th>
                    <th>Rate</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                <% @invoice.line_items.each do |line_item| %>
                <tr>
                    <td><%= simple_format line_item.description %></td>
                    <td><%= line_item.quantity.to_d.round %></td>
                    <td><%= line_item.rate.to_d %></td>
                    <td><%= number_to_currency(line_item.subtotal) %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div class="total">Total: <%= number_to_currency(@invoice.total.to_s.slice(7..)) %></div>
        <a href="<%= invoice_path(@invoice, format: :pdf) %>" class="button">Download PDF</a>
    </div>